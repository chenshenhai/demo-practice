{
  "manifest_version": 2,
  "name": "HelloWorld",
  "description": "Hello World!",
  "version": "0.0.1",
  "permissions": [
    "activeTab"
  ],
  "icons": {
		"48": "icon.png",
		"128": "icon.png"
	},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "page/popup.html"
  },
  "background": {
    "page": "page/background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/*"
  ],
  "devtools_page": "page/devtools.html"
}